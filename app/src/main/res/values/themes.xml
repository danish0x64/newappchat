<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3498db</item> <!-- Blue color -->
        <item name="colorPrimaryVariant">#2980b9</item> <!-- Darker blue variant -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#27ae60</item> <!-- Green color -->
        <item name="colorSecondaryVariant">#2ecc71</item> <!-- Darker green variant -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_gray</item>
    </style>
</resources>
